<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>
<%= form_for(@player) do |f|%>
  <%= f.label :name %>
  <%= f.text_field :name%>
  <%= f.label :jersey_number %>
  <%= f.number_field :jersey_number%>
  <%= f.label :foreigner %>
  <%= f.check_box :foreigner%>
  <%= f.label :team %>
  <%= f.collection_select(:team_id, @teams, :id, :name)%>
  <%= f.submit %>
  <% end %>
